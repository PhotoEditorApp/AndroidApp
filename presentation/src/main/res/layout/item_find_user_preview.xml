<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/find_preview_container">

    <ImageView
        android:id="@+id/find_preview_user_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/find_preview_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Имя Фамилия"
        android:textSize="@dimen/font_size_16"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/find_preview_user_avatar"
        app:layout_constraintTop_toTopOf="@+id/find_preview_user_avatar" />

    <TextView
        android:id="@+id/find_preview_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Email пользователя"
        app:layout_constraintStart_toEndOf="@+id/find_preview_user_avatar"
        app:layout_constraintTop_toBottomOf="@+id/find_preview_user_name" />

    <TextView
        android:id="@+id/find_preview_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="@dimen/indent_small"
        android:text="Id пользователя"
        app:layout_constraintStart_toStartOf="@+id/find_preview_user_id"
        app:layout_constraintTop_toBottomOf="@+id/find_preview_user_id" />


</androidx.constraintlayout.widget.ConstraintLayout>