<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loading_ui"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blurTransparent"
        android:elevation="10dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/photo_preview_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp"
        android:clipToPadding="false"
        android:paddingBottom="60dp" />

    <LinearLayout
        android:id="@+id/photo_preview_button_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo_shape"
        android:orientation="vertical"
        android:padding="@dimen/indent_medium_plus"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/hide_panel"
        app:layout_constraintEnd_toEndOf="@+id/hide_panel"
        app:layout_constraintStart_toStartOf="@+id/hide_panel">


        <ImageButton
            android:id="@+id/button_add_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/icon_add_image" />

        <ImageButton
            android:id="@+id/button_choose_sort"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_choose_sort"
            android:backgroundTint="@color/white" />

        <ImageButton
            android:id="@+id/create_collage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_create_collage"
            android:backgroundTint="@color/white" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/hide_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_hide_button_panel"
        app:layout_constraintBottom_toBottomOf="@+id/photo_preview_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/hide_panel_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_image_preview_button_panel"

            android:backgroundTint="@color/white" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>