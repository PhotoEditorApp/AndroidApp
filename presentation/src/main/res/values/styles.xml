<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryMiddle</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primaryLight</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Invitation Activity RadioGroup-->
    <style name="InvitationRadioGroup" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--<item name="colorControlNormal">@color/activity_elements_unchecked</item>-->
        <!--<item name="colorControlActivated">@color/activity_elements</item>-->
    </style>

    <style name="labelBackgroundSlider" parent="Widget.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">@color/whiteTransparent</item>
        <item name="android:visible">true</item>
        <item name="android:textAppearance">@style/slider.TextAppearance</item>
    </style>

    <style name="slider.TextAppearance" parent="@style/TextAppearance.MaterialComponents.Tooltip">
        <!--<item name="colorPrimary">@color/activity_black_text</item>-->
        <!-- color used by the text in the Tooltip -->
        <!--<item name="android:textColor">@color/activity_black_text</item>-->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="buttonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="colorPrimary">@color/activity_elements</item>-->
        <item name="colorPrimaryDark">@color/primaryLight</item>
        <item name="rippleColor">@color/primaryLight</item>
    </style>

    <style name="SignInOutButtonStyle1" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primaryLight</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SignInOutButtonStyle2" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/primaryMiddle</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="strokeWidth">0.6dp</item>
        <item name="strokeColor">@color/primaryMiddle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="radioButtonStyle" parent="Theme.AppCompat.Light">
        <!--<item name="colorPrimary">@color/activity_elements</item>-->
    </style>

</resources>